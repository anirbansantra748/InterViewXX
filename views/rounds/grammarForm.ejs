<form action="/add-round/grammar/<%= jobId %>" method="POST">
  <label>Round Title:</label>
  <input type="text" name="title" value="Grammar Round" required>
  <label>Order:</label><br>
    <input type="number" name="order" min="1" required><br><br>

  <label>Time Limit (minutes):</label>
  <input type="number" name="timeLimit" required>

  <label>Total Marks:</label>
  <input type="number" name="totalMarks" required>

  <label>Passing Marks:</label>
  <input type="number" name="passingMarks" required>

  <div id="question-container">
    <!-- Question Block Template -->
    <div class="grammar-question">
      <h4>Grammar Question 1</h4>

      <label>Question:</label>
      <textarea name="questions[0][question]" required></textarea>

      <label>Options:</label>
      <input type="text" name="questions[0][options][]" required placeholder="Option 1">
      <input type="text" name="questions[0][options][]" required placeholder="Option 2">
      <input type="text" name="questions[0][options][]" required placeholder="Option 3">
      <input type="text" name="questions[0][options][]" required placeholder="Option 4">

      <label>Correct Answer:</label>
      <input type="text" name="questions[0][correctAnswer]" required>

      <label>Explanation:</label>
      <textarea name="questions[0][explanation]"></textarea>

      <label>Difficulty:</label>
      <select name="questions[0][difficulty]">
        <option value="Easy">Easy</option>
        <option value="Medium">Medium</option>
        <option value="Hard">Hard</option>
      </select>

      <label>Category:</label>
      <select name="questions[0][category]">
        <option value="Tense">Tense</option>
        <option value="Preposition">Preposition</option>
        <option value="Conjunction">Conjunction</option>
        <option value="Articles">Articles</option>
        <option value="Misc">Misc</option>
      </select>

      <hr>
    </div>
  </div>

  <button type="button" id="add-question-btn">➕ Add Another Grammar Question</button>
  <br><br>
  <button type="submit">✅ Add Grammar Round</button>
  <br><br><br><br>
</form>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    let questionIndex = 1;

    document.getElementById('add-question-btn').addEventListener('click', function () {
      const container = document.getElementById('question-container');

      const newDiv = document.createElement('div');
      newDiv.classList.add('grammar-question');

      newDiv.innerHTML = `
        <h4>Grammar Question ${questionIndex + 1}</h4>

        <label>Question:</label>
        <textarea name="questions[${questionIndex}][question]" required></textarea>

        <label>Options:</label>
        <input type="text" name="questions[${questionIndex}][options][]" required placeholder="Option 1">
        <input type="text" name="questions[${questionIndex}][options][]" required placeholder="Option 2">
        <input type="text" name="questions[${questionIndex}][options][]" required placeholder="Option 3">
        <input type="text" name="questions[${questionIndex}][options][]" required placeholder="Option 4">

        <label>Correct Answer:</label>
        <input type="text" name="questions[${questionIndex}][correctAnswer]" required>

        <label>Explanation:</label>
        <textarea name="questions[${questionIndex}][explanation]"></textarea>

        <label>Difficulty:</label>
        <select name="questions[${questionIndex}][difficulty]">
          <option value="Easy">Easy</option>
          <option value="Medium">Medium</option>
          <option value="Hard">Hard</option>
        </select>

        <label>Category:</label>
        <select name="questions[${questionIndex}][category]">
          <option value="Tense">Tense</option>
          <option value="Preposition">Preposition</option>
          <option value="Conjunction">Conjunction</option>
          <option value="Articles">Articles</option>
          <option value="Misc">Misc</option>
        </select>

        <hr>
      `;

      container.appendChild(newDiv);
      questionIndex++;
    });
  });
</script>
