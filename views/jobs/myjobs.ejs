<% layout("/layouts/boilerplate") %>

<style>
  body {
    background: linear-gradient(to right, #0f0c29, #302b63, #24243e);
    font-family: 'Inter', sans-serif;
    color: #e0e0e0;
  }

  .container {
    max-width: 1200px;
    margin: auto;
    padding: 2rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: #ffffff;
  }

  .job-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .job-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 16px;
    padding: 1.5rem;
    backdrop-filter: blur(12px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
    transition: all 0.3s ease;
  }

  .job-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.35);
  }

  .job-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 0.8rem;
  }

  .job-meta {
    font-size: 0.92rem;
    margin: 0.2rem 0;
    color: #cfcfcf;
  }

  .job-meta strong {
    color: #fff;
    font-weight: 500;
    display: inline-block;
    min-width: 90px;
  }

  .job-footer {
    display: flex;
    gap: 10px;
    margin-top: 1rem;
    flex-wrap: wrap;
  }

  .view-btn {
    background: linear-gradient(to right, #00c6ff, #0072ff);
    color: #fff;
    padding: 0.5rem 1.2rem;
    font-size: 0.85rem;
    font-weight: 500;
    border: none;
    border-radius: 8px;
    text-decoration: none;
    display: inline-block;
    transition: background 0.3s ease;
  }

  .view-btn:hover {
    background: linear-gradient(to right, #6a11cb, #2575fc);
  }

  .delete-btn {
    background: #ff4d4d !important;
  }

  .no-jobs {
    text-align: center;
    font-size: 1.1rem;
    color: #aaa;
    margin-top: 3rem;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }
  }
</style>

<div class="container">
  <h1>ğŸ“ My Posted Jobs</h1>

  <% if (jobs.length === 0) { %>
    <div class="no-jobs">You haven't posted any jobs yet.</div>
  <% } else { %>
    <div class="job-grid">
      <% jobs.forEach(job => { %>
        <div class="job-card">
          <div class="job-title">ğŸ§¾ <%= job.title %></div>
          <div class="job-meta"><strong>ğŸ¢ Company:</strong> <%= job.company %></div>
          <div class="job-meta"><strong>ğŸ“ Location:</strong> <%= job.location %></div>
          <div class="job-meta"><strong>ğŸ’¼ Type:</strong> <%= job.jobType %></div>
          <div class="job-meta"><strong>ğŸ“Œ Status:</strong> <%= job.status %></div>
          <div class="job-meta"><strong>â³ Deadline:</strong> <%= job.deadlineDate || 'N/A' %></div>

          <div class="job-footer">
            <a href="/jobs/<%= job._id %>" class="view-btn">ğŸ” View</a>
            <a href="/jobs/edit/<%= job._id %>" class="view-btn">âœï¸ Edit</a>
            <form method="POST" action="/jobs/delete/<%= job._id %>" onsubmit="return confirm('Are you sure you want to delete this job?')" style="display:inline;">
              <button type="submit" class="view-btn delete-btn">ğŸ—‘ï¸ Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
