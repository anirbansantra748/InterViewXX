<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Select Chat</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    body {
      font-family: 'Inter', sans-serif;
      background-color: #0f0f1a;
      color: white;
      padding: 2rem;
    }

    h2 {
      font-size: 1.5rem;
      margin-bottom: 1.2rem;
      color: #c9c9ff;
    }

    .user-scroll-row {
      display: flex;
      overflow-x: auto;
      gap: 1rem;
      padding-bottom: 0.5rem;
      scrollbar-width: none;
    }

    .user-scroll-row::-webkit-scrollbar {
      display: none;
    }

    .user-card {
      flex: 0 0 auto;
      width: 120px;
      background: #1a1a2e;
      padding: 1rem 0.5rem;
      border-radius: 0.75rem;
      border: 1px solid #2d2d4a;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      color: white;
      transition: all 0.2s ease;
    }

    .user-card:hover {
      background: #2b2c47;
      transform: scale(1.03);
      border-color: #6366f1;
    }

    .avatar {
      width: 48px;
      height: 48px;
      background: #3c3e6f;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
      border: 2px solid #6366f1;
    }

    .username {
      font-size: 0.9rem;
      text-align: center;
      word-wrap: break-word;
    }

    @media screen and (max-width: 600px) {
      .user-card {
        width: 100px;
        padding: 0.8rem 0.4rem;
      }

      .avatar {
        width: 40px;
        height: 40px;
        font-size: 1rem;
      }

      .username {
        font-size: 0.8rem;
      }
    }
  </style>
</head>
<body>

  <h2>Select someone to chat with:</h2>

  <div class="user-scroll-row">
    <% users.forEach(user => { %>
      <a class="user-card" href="/chats/chatbox/<%= user._id %>">
        <div class="avatar"><%= user.username?.[0]?.toUpperCase() || '?' %></div>
        <div class="username"><%= user.username %></div>
      </a>
    <% }) %>
  </div>

</body>
</html>
